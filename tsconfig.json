{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@japikey/japikey": ["packages/japikey/src"],
      "@japikey/japikey/*": ["packages/japikey/src/*"],
      "@japikey/shared": ["packages/shared/src"],
      "@japikey/shared/*": ["packages/shared/src/*"],
      "@japikey/authenticate": ["packages/authenticate/src"],
      "@japikey/authenticate/*": ["packages/authenticate/src/*"],
      "@japikey/express": ["packages/express/src"],
      "@japikey/express/*": ["packages/express/src/*"]
    },
    "esModuleInterop": true,
    "target": "es2024",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declarationMap": true,
    "declaration": true,
    "lib": ["es2024"],
    "strict": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
