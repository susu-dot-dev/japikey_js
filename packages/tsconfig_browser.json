{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "es2024",
    "moduleDetection": "force",
    "module": "NodeNext",
    "declarationMap": true,
    "declaration": true,
    "lib": [
      "es2024"
    ],
    "strict": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
